<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit"
                android:layout_alignParentRight="true"
                android:layout_marginTop="50dp"
                android:layout_marginRight="8dp"
                app:elevation="6dp"
                app:pressedTranslationZ="12dp"
                app:borderWidth="0dp"/>

            <RelativeLayout
                android:id="@+id/profile_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header_cover_image"
                android:background="@color/grey"
                android:elevation="4dp"
                android:paddingBottom="24dp">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:text="Here are Your Custom Events"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/profile_layout">

                <RelativeLayout
                    android:id="@+id/relLayout1"
                    android:visibility="gone"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/fab1"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/emoji_2716"
                        android:backgroundTint="@color/red"
                        app:elevation="6dp"
                        app:pressedTranslationZ="12dp"
                        app:borderWidth="0dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="38dp" />

                    <ImageView
                        android:id="@+id/emoji1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/emoji_1f631"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="90dp"
                        android:layout_marginStart="20dp"/>

                    <TextView
                        android:id="@+id/emoji1T"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="160dp"
                        android:layout_marginTop="15dp"
                        android:text="Fear"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relLayout2"
                    android:visibility="gone"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/fab2"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/emoji_2716"
                        android:backgroundTint="@color/red"
                        app:elevation="6dp"
                        app:pressedTranslationZ="12dp"
                        app:borderWidth="0dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="38dp" />

                    <ImageView
                        android:id="@+id/emoji2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/emoji_1f621"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="90dp"
                        android:layout_marginStart="20dp"/>

                    <TextView
                        android:id="@+id/emoji2T"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="160dp"
                        android:layout_marginTop="15dp"
                        android:text="Anger"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relLayout3"
                    android:visibility="gone"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/fab3"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/emoji_2716"
                        android:backgroundTint="@color/red"
                        app:elevation="6dp"
                        app:pressedTranslationZ="12dp"
                        app:borderWidth="0dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="38dp" />

                    <ImageView
                        android:id="@+id/emoji3"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/emoji_1f630"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="90dp"
                        android:layout_marginStart="20dp"/>

                    <TextView
                        android:id="@+id/emoji3T"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="160dp"
                        android:layout_marginTop="15dp"
                        android:text="Sadness"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relLayout4"
                    android:visibility="gone"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/fab4"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/emoji_2716"
                        android:backgroundTint="@color/red"
                        app:elevation="6dp"
                        app:pressedTranslationZ="12dp"
                        app:borderWidth="0dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="38dp" />

                    <ImageView
                        android:id="@+id/emoji4"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/emoji_1f602"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="90dp"
                        android:layout_marginStart="20dp"/>

                    <TextView
                        android:id="@+id/emoji4T"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="160dp"
                        android:layout_marginTop="15dp"
                        android:text="Joy"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relLayout5"
                    android:visibility="gone"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/fab5"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/emoji_2716"
                        android:backgroundTint="@color/red"
                        app:elevation="6dp"
                        app:pressedTranslationZ="12dp"
                        app:borderWidth="0dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="38dp" />

                    <ImageView
                        android:id="@+id/emoji5"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/emoji_1f601"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="90dp"
                        android:layout_marginStart="20dp"/>

                    <TextView
                        android:id="@+id/emoji5T"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="160dp"
                        android:layout_marginTop="15dp"
                        android:text="Disgust"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>